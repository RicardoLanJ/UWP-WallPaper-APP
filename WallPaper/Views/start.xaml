            <StackPanel>
                <TextBlock Text="发现" FontSize="154"></TextBlock>
                <TextBlock Text="发现" FontSize="154"></TextBlock>
                <TextBlock Text="发现" FontSize="154"></TextBlock>
                <TextBlock Text="发现" FontSize="154"></TextBlock>
                <TextBlock Text="发现" FontSize="154"></TextBlock>
                <TextBlock Text="发现" FontSize="154"></TextBlock>
                <TextBlock Text="发现" FontSize="154"></TextBlock>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
